<%= form_for(@event) do |f| %>

<div class="field">
    <%= f.label :start %><br>
    <%= f.datetime_select :start, minute_step: 5 %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.datetime_select :end, minute_step: 5 %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :scheduler_id %><br>
    <%= f.collection_select(:scheduler_id, Scheduler.order(:name), :id, :name) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>